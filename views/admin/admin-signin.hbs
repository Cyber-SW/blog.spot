<div class="sign-in">
  <img class="wave" src="/images/draw.png" />
  <div class="container">

    <div class="img">
      <a href="/">
       <img
          id="logo-img"
          src="/images/blogbytes-logo-black.png"
          class="log-in-home"
        /> 
      </a>
      <img src="/images/admin.svg" />
    </div>


    <div class="login-content">
      <form action="/admin" method="post">
        <img src="/images/profile.svg" />
        <h2 class="title">Welcome <span class="log-in-span"> Admin! </span></h2>
        <div class="input-div one">
          <div class="i">
            <i class="fas fa-user"></i>
          </div>
          <div class="div">
            <h5>Username</h5>
            <input type="text" class="input" name="username" id="username" />
          </div>
        </div>
        <div class="input-div pass">
          <div class="i">
            <i class="fas fa-lock"></i>
          </div>
          <div class="div">
            <h5>Password</h5>
            <input
              type="password"
              class="input"
              name="password"
              id="password"
            />
          </div>
        </div>
        {{! <a href="#">Forgot Password?</a> }}
        <a href="/admin/signup">Dont have an account?</a>

      {{#if errorMessage}}

        <h3 class="error-message">{{errorMessage}}</h3>

      {{/if}}
        <button type="submit" class="btn">Sign In</button>
      </form>
    </div>
  </div>
</div>