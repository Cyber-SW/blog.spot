  </ul>
  <ul class="side-menu">

    <li>
      <a href="/user-logout" class="logout">
        <i class="bx bxs-log-out-circle"></i>
        <span class="text">Logout</span>
      </a>
    </li>
  </ul>
</section>
<!-- SIDEBAR -->

<!-- CONTENT -->
<section id="content" class="anim">
  <!-- NAVBAR -->
  <nav>
    <i class="bx bx-menu"></i>
    <a href="/create-blog" class="nav-link">Create Your Own Blog</a>
    <form action="#">

    </form>
    <input type="checkbox" id="switch-mode" hidden />
    <label for="switch-mode" class="switch-mode"></label>

    <a href="/user-profile" class="profile">
      <img src="/images/profile.svg">
    </a>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN -->
  <main>
    <div class="head-title">
      <div class="left">
        <h1>Explore</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Dashboard</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <a class="active" href="/user-dashboard">Explore</a>
          </li>
        </ul>
      </div>

    </div>



    <div class="table-data">
      {{#each data}}
      <div class="order">
        <div class="head">


          <div class="short-blog">
            <a href="/explore-blog/{{this._id}}" class="short-blog-link">
              <div class="short-blog-div">


                <h3 class="blog-topic">Topic:{{this.topic}}</h3>
                <h3 class="blog-name">Title:{{this.title}}</h3>
                <h3 class="blog-username">Username:{{this.creator.username}}</h3>
                <h3 class="blog-likes">Likes:{{this.likes}}</h3>

                {{!-- <a href="/explore-blog/{{this._id}}">Read In Detail</a> --}}
              </div>
            </a>
          </div>
          {{/each }}
        </div>

      </div>


    </div>
  </main>
</section>
