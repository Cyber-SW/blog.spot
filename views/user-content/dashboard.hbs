<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav>
    <i class="bx bx-menu"></i>
    <a href="/explore" class="nav-link">Explore More Blogs</a>
    <form action="#">
      <div class="form-input">
        <input type="search" placeholder="Search..." />
        <button type="submit" class="search-btn"><i
            class="bx bx-search"
          ></i></button>
      </div>
    </form>
    <input type="checkbox" id="switch-mode" hidden />
    <label for="switch-mode" class="switch-mode"></label>

    <a href="/user-profile" class="profile">
      <img src="/images/profile.svg" />
    </a>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN -->
  <main>
    <div class="head-title">
      <div class="left">
        <h1>Dashboard</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Dashboard</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <a class="active" href="/user-dashboard">Home</a>
          </li>
        </ul>
      </div>
      <a href="#" class="btn-download">
        <i class="bx bx-user"></i>
        <span class="text">Welcome {{username}}</span>
      </a>
    </div>

    <div class="table-data">

      <div class="order">
        <div class="head">
          <h3>Most Liked</h3>

          <h3
            class="user-blog-creator"
          >Username:{{firstTwoObj.0.creatorName}}</h3>
          <h2 class="user-blog-title">Title:{{firstTwoObj.0.title}}</h2>
          <p
            class="user-blog-description"
          >Description:{{firstTwoObj.0.description}}</p>
          <p class="user-blog-likes">Total Likes:{{firstTwoObj.0.likes}}</p>

        </div>

      </div>

      <div class="order">
        <div class="head">
          <h3>Second Most Liked</h3>
          <h3
            class="user-blog-creator"
          >Username:{{firstTwoObj.1.creatorName}}</h3>
          <h2 class="user-blog-title">Title:{{firstTwoObj.1.title}}</h2>
          <p
            class="user-blog-description"
          >Description:{{firstTwoObj.1.description}}</p>
          <p class="user-blog-likes">Total Likes:{{firstTwoObj.1.likes}}</p>
        </div>

      </div>
    </div>
  </main>
</section>

