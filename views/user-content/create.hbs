<!-- SIDEBAR -->

<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav>
    <i class="bx bx-menu"></i>
    <a href="/explore" class="nav-link">Explore Blogs</a>
    <form action="#">

    </form>
    <input type="checkbox" id="switch-mode" hidden />
    <label for="switch-mode" class="switch-mode"></label>

    <a href="/user-profile" class="profile">
      <img src="/images/profile.svg">
    </a>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN -->
  <main>
    <div class="head-title">
      <div class="left">
        <h1>Create Your Own Blog</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Dashboard</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <a class="active" href="/user-dashboard">Create Your Own Blog</a>
          </li>
        </ul>
      </div>
      <a href="/user-dashboard" class="btn-download">
        <i class="bx bx-book"></i>
        <span class="text">BlogByte</span>
      </a>
    </div>



    <div class="table-data">

      <div class="order">
        <div class="head">
          <h3>Create </h3>
          <form action="/create-blog" method="POST">

            <label> Title
              <input type="text" name="title" placeholder="give your blog a title" />
            </label>

            <label for="topic">Choose a topic</label>
            <select id="topic" name="topic" required>
              <option value="" disabled selected>Select Topic</option>
              {{#each topics}}
              <option value="{{this}}">{{this}}</option>
              {{/each}}
            </select>
            </label>

            <label> Blog
              <textarea type="textarea" id="entry" name="entry" rows="4" cols="50"
                placeholder="write your blog here"></textarea>
            </label>

            <button type="submit">Create Blog</button>

            {{#if errorMessage}}
            <p class="error">{{errorMessage}}</p>
            {{/if}}

          </form>
        </div>

      </div>


    </div>
  </main>
</section>

