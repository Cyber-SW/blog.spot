<!-- SIDEBAR -->

<!-- CONTENT -->
<section id="content" class="anim">
  <!-- NAVBAR -->
  <nav>
    <i class="bx bx-menu"></i>
    <a href="/explore" class="nav-link">Explore More Blogs</a>
    <form action="#">
      <div class="form-input">
        <input type="search" placeholder="Search..." />
        <button type="submit" class="search-btn"><i class="bx bx-search"></i></button>
      </div>
    </form>
    <input type="checkbox" id="switch-mode" hidden />
    <label for="switch-mode" class="switch-mode"></label>

    <a href="/profile" class="profile">
      <img src="/images/profile.svg">
    </a>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN -->
  <main>
    <div class="head-title">
      <div class="left">
        <h1>Explore</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Dashboard</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <a class="active" href="/Explore">Explore Blog</a>
          </li>
        </ul>
      </div>
      <a href="#" class="btn-download">
        <i class="bx bx-user"></i>
        <span class="text">Welcome {{username}}</span>
      </a>
    </div>



    <div class="table-data">

      <div class="order">
        <div class="head">
          <div class="dashboard-tud">
            <h2 class="dashboard-title">
              Title:{{data.title}}
            </h2>
            <h3 class="dashboard-username">
              <span class="dashboard-starttext">Written by:</span>
              {{data.creator.username}}
            </h3>
            <h3 class="dashboard-username">
              topic:{{data.topic}}
            </h3>
            <p class="dashboard-description">
              Description:{{data.entry}}
            </p>
          </div>

          <div class="like-comment">

            <p>Likes: {{data.likes}}</p>

            <p class="">Total Comments:{{totalComments}}</p>
          </div>

          <form action="/explore-blog-like/{{data._id}}" method="POST">
            <button type="submit" class="comment-btn">Like</button>
          </form>


          <div class="comment-section">

            <h3>Write a comment:</h3>
            <form
              action="/explore-blog/{{data._id}}"
              method="POST"
            >
              <textarea
                type="textarea"
                id="comments"
                name="comments"
                rows="4"
                cols="50"
                placeholder="write your comment here"
              ></textarea>

              <button type="submit" class="comment-btn">Create Comment</button>
            </form>
          </div >


          <div class="dashboard-comment-reverse">
          {{#each data}}
          {{#each comments}}
          <p class="blog-comments">Comments:{{this}}</p>
          {{/each}}
          {{/each}}

          </div>


        </div>

      </div>

    </div>


    </div>
  </main>
</section>