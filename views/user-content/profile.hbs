<section id="sidebar">
  <div class="user-nav-left">
    <a href="/user-dashboard"><img
        src="/images/blogbytes-logo-black.png"
        alt=""
      /></a>
  </div>

  <ul class="side-menu top">
    <li class="active">
      <a href="/user-dashboard">
        <i class="bx bxs-dashboard"></i>
        <span class="text">Dashboard</span>
      </a>
    </li>
    <li>
      <a href="/user-profile">
        <i class="bx bxs-shopping-bag-alt"></i>
        <span class="text">Profile</span>
      </a>
    </li>
    <li>
      <a href="/create-blog">
        <i class="bx bxs-doughnut-chart"></i>
        <span class="text">Create-Blog</span>
      </a>
    </li>
    <li>
      <a href="/explore">
        <i class="bx bxs-message-dots"></i>
        <span class="text">Explore</span>
      </a>
    </li>

  </ul>
  <ul class="side-menu">

    <li>
      <a href="/user-logout" class="logout">
        <i class="bx bxs-log-out-circle"></i>
        <span class="text">Logout</span>
      </a>
    </li>
  </ul>
</section>
<!-- SIDEBAR -->

<!-- CONTENT -->
<section id="content">
  <!-- NAVBAR -->
  <nav>
    <i class="bx bx-menu"></i>
    <form action="#">

    </form>
    <input type="checkbox" id="switch-mode" hidden />
    <label for="switch-mode" class="switch-mode"></label>

    <a href="/user-profile" class="profile">
      <img src="/images/profile.svg" />
    </a>
  </nav>
  <!-- NAVBAR -->

  <!-- MAIN -->
  <main>
    <div class="head-title">
      <div class="left">
        <h1>Profile</h1>
        <ul class="breadcrumb">
          <li>
            <a href="#">Dashboard</a>
          </li>
          <li><i class="bx bx-chevron-right"></i></li>
          <li>
            <a class="active" href="/user-profile">Profile</a>
          </li>
        </ul>
      </div>

    </div>

    <ul class="box-info">
      <li>
        <i class="bx bxs-like"></i>
        <span class="text">
          <h3>{{totalLikes}}</h3>
          <p>Total Likes</p>
        </span>
      </li>
      <li>
        <i class="bx bxs-comment"></i>
        <span class="text">
          <h3>{{totalComments}}</h3>
          <p>Total Comments</p>
        </span>
      </li>

    </ul>

    <div class="table-data">
      {{#each userData}}
      <div class="order">
        <div class="head">
          <div class="short-blog">
            <a href="/profile" class="short-blog-link">
              <div class="short-blog-div">
                <h3 class="blog-topic">Topic:{{this.topic}}</h3>
                <h3 class="blog-name">Title:{{this.title}}</h3>
                
                {{!-- <a href="/explore-blog/{{this._id}}">Read In Detail</a> --}}
              </div>
            </a>
          </div>
        </div>

      </div>
      {{/each}}

     
    </div>
  </main>
</section>





